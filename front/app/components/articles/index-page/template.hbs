<div class="ui hidden divider"></div>

{{#each model as |article index|}}
  <h1 class="ui header">
    {{#link-to "user.articles.article" article.id}}
      {{article.title}}
    {{/link-to}}
    <i>by {{article.author}}</i>
    <div class="sub header">
      {{article.short}}
    </div>
    <div class="sub header">
      <i>{{moment-format model.created 'MM-DD-YYYY'}}</i>
    </div>
  </h1>

  <div class="ui hidden divider"></div>
{{/each}}
